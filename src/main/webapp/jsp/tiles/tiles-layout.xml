<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<!-- 메뉴 탭 타일즈 -->
	<definition name="layouts-tiles"
		template="/jsp/tiles/tiles-layout.jsp">
		<put-attribute name="header" value="/jsp/common/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/jsp/common/footer.jsp" />
		<put-attribute name="popup" value="/jsp/common/popup.jsp" />
		<put-attribute name="common_script" value="/jsp/common/script.jsp" />
		<put-attribute name="common_style" value="/jsp/common/stylesheet.jsp" />
	</definition>

	<definition name="*/*" extends="layouts-tiles">
		<put-attribute name="body" value="/jsp/{1}/{2}.jsp" />
	</definition>
	
	<definition name="*/*/*" extends="layouts-tiles">
		<put-attribute name="body" value="/jsp/{1}/{2}/{3}.jsp" />
	</definition>

</tiles-definitions>